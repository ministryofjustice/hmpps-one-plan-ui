{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Database with UI" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}
<!--<img width=32 height=32 src="assets/images/profile.png">-->
<h1 class="govuk-!-margin-bottom-0">CRN: 42378429378</h1>
<hr>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
    <p class="govuk-body govuk-hint">Plan: English</p>
    </div>
    <div class="govuk-grid-column-one-third">
    <p class="govuk-body govuk-hint">Added by: D. Jones (POM)</p>
    <p class="govuk-body govuk-hint">Added on: 2nd Fed 2024</p>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h2>Objectives</h2>
        
        {% for objective in objectives %}
            <h3>{{ objective.title }}</h3>
                <h4>Steps</h4>
                <ul>
                {% for step in objective.steps %}
                    <li>
                        <a class="govuk-link" href="#">{{ step.description }}</a>
                    </li>
                    </li>
                {% endfor %}
                </ul>
        {% endfor %}
    </div>
</div>

{% endblock %}
